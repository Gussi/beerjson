{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "StyleBase": {
            "type": "object",
            "description": "The descriptive base type for both beer style guideline records and recipe style provisions. Provides unique properties to identify individual beer styles",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "category_number": {
                    "type": "integer"
                },
                "style_letter": {
                    "type": "string",
                    "maxLength": 1,
                    "minLength": 1,
                    "pattern": "[A-Z ]"
                },
                "style_guide": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/StyleCategories"
                }
            },
            "required": [
                "name",
                "category",
                "category_number",
                "style_letter",
                "style_guide",
                "type"
            ]
        },
        "StyleType": {
            "type": "object",
            "description": "StyleType provide information for BJCP Style categorization",
            "additionalProperties": false,
            "properties": {
                "original_gravity": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/DensityRangeType"
                },
                "final_gravity": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/DensityRangeType"
                },
                "international_bitterness_units": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/QuantitativeRangeType"
                },
                "color": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/ColorRangeType"
                },
                "carbonation": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/QuantitativeRangeType"
                },
                "alcohol_by_volume": {
                    "$ref": "https://raw.githubusercontent.com/beerjson/beerjson/preparing-beerjson-2.0/json/measureable_units.json#/definitions/PercentRangeType"
                },
                "notes": {
                    "type": "string"
                },
                "aroma": {
                    "type": "string"
                },
                "appearance": {
                    "type": "string"
                },
                "flavor": {
                    "type": "string"
                },
                "mouthfeel": {
                    "type": "string"
                },
                "overall_impression": {
                    "type": "string"
                },
                "ingredients": {
                    "type": "string"
                },
                "examples": {
                    "type": "string"
                }
            },
            "required": [
                "original_gravity",
                "final_gravity",
                "international_bitterness_units",
                "color"
            ]
        },
        "RecipeStyleType": {
            "description": "RecipeStyleType defines style information stored in a recipe record"
        },
        "StyleCategories": {
            "type": "string",
            "enum": [
                "lager",
                "ale",
                "mead",
                "wheat",
                "mixed",
                "cider"
            ]
        }
    }
}