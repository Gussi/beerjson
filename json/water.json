{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "WaterBase": {
            "type": "object",
            "description": "WaterBase provides unique properties to identify individual records of regional brewing water",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "calcium": {
                    "type": "number"
                },
                "bicarbonate": {
                    "type": "number"
                },
                "sulfate": {
                    "type": "number"
                },
                "chloride": {
                    "type": "number"
                },
                "sodium": {
                    "type": "number"
                },
                "magnesium": {
                    "type": "number"
                }
            },
            "required": [
                "name",
                "calcium",
                "bicarbonate",
                "sulfate",
                "chloride",
                "sodium",
                "magnesium"
            ]
        },
        "WaterType": {
            "type": "object",
            "description": "WaterType collects the attributes of a regional brewing water to store as record information",
            "additionalProperties": false,
            "properties": {
                "pH": {
                    "type": "number"
                },
                "notes": {
                    "type": "string"
                }
            }
        },
        "WaterAdditionType": {
            "type": "object",
            "description": "WaterAdditionType collects the attributes of a water salt addition for use in a recipe",
            "additionalProperties": false,
            "properties": {
                "addition": {
                    "$ref": "#/definitions/WaterBase"
                }
            },
            "required": [
                "addition"
            ]
        }
    }
}